---
import Layout from '../../layouts/Layout.astro';
import { Button } from '../../components/ui/button';
---

<Layout title="Request a Feature - EduLaluan">
  <div class="container mx-auto px-4 py-8 max-w-2xl">
    
    <!-- Header -->
    <div class="mb-8">
      <a href="/contribute" class="text-malaysia-teal-600 hover:text-malaysia-teal-700 mb-4 inline-block">
        ‚Üê Back to Contribute
      </a>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        üí° Request a Feature
      </h1>
      <p class="text-gray-600">
        Have an idea to improve EduLaluan? We'd love to hear it! All fields marked with * are required.
      </p>
    </div>

    <!-- Form -->
    <form 
      name="feature-request" 
      method="POST" 
      action="/contribute/success"
      data-netlify="true" 
      netlify-honeypot="bot-field"
      class="bg-white border rounded-lg p-6 space-y-6"
    >
      
      <!-- Hidden fields for Netlify -->
      <input type="hidden" name="form-name" value="feature-request" />
      <p class="hidden">
        <label>Don't fill this out if you're human: <input name="bot-field" /></label>
      </p>

      <div>
        <label for="featureTitle" class="block text-sm font-medium text-gray-700 mb-1">
          Feature Title *
        </label>
        <input 
          type="text" 
          id="featureTitle" 
          name="featureTitle" 
          required 
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-malaysia-teal-500"
          placeholder="Brief one-line description"
        />
        <p class="text-xs text-gray-500 mt-1">e.g., "Add filtering by language" or "Mobile app version"</p>
      </div>

      <div>
        <label for="featureDescription" class="block text-sm font-medium text-gray-700 mb-1">
          Detailed Description *
        </label>
        <textarea 
          id="featureDescription" 
          name="featureDescription" 
          required 
          rows="8"
          minlength="50"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-malaysia-teal-500"
          placeholder="Please describe:&#10;&#10;1. What feature would you like?&#10;2. Why would it be useful?&#10;3. How would it work?&#10;&#10;Be as detailed as possible to help us understand your idea."
        ></textarea>
        <p class="text-xs text-gray-500 mt-1">Minimum 50 characters. The more detail, the better!</p>
      </div>

      <div>
        <label for="submitterEmail" class="block text-sm font-medium text-gray-700 mb-1">
          Your Email (optional)
        </label>
        <input 
          type="email" 
          id="submitterEmail" 
          name="submitterEmail" 
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-malaysia-teal-500"
          placeholder="your@email.com"
        />
        <p class="text-xs text-gray-500 mt-1">In case we need clarification or want to update you on progress</p>
      </div>

      <!-- Submit Button -->
      <div class="pt-4">
        <Button 
          type="submit" 
          className="w-full bg-malaysia-teal-600 hover:bg-malaysia-teal-700 text-white py-3 text-lg"
        >
          Submit Feature Request
        </Button>
        <p class="text-xs text-gray-500 text-center mt-3">
          Thank you for helping us improve EduLaluan!
        </p>
      </div>

    </form>

    <!-- What happens next -->
    <div class="mt-8 p-4 bg-gray-50 rounded-lg">
      <h3 class="font-semibold text-gray-900 mb-2">What happens next?</h3>
      <p class="text-sm text-gray-600">
        Your feature request will be reviewed by our team. We'll consider factors like:
        feasibility, impact on users, alignment with our mission, and development resources.
        If we need more information, we'll reach out via email.
      </p>
    </div>

  </div>
</Layout>
